{
	"name": "Node.js over Alpine",
	"build": {
		"dockerfile": "Dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"installZsh": "true",
			"upgradePackages": "true"
		}
	},
	"remoteUser": "node",
	"customizations": {
		"vscode": {
			"extensions": [
				"svelte.svelte-vscode",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint",
				"bradlc.vscode-tailwindcss"
			]
		}
	},
	"forwardPorts": [5173]
}
